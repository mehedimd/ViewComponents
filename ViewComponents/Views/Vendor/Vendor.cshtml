@model IEnumerable<ViewComponents.ViewModels.VendorInvoiceVM>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Vendor Name</th>
            <th>VendorAddress</th>
            <th>InvoiceTotal</th>
            <th>PaymentTotal</th>
            <th>TotalDue</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.VendorName</td>
                <td>@item.VendorAddress</td>
                <td>@item.InvoiceTotal</td>
                <td>@item.PaymentTotal</td>
                <td>@item.TotalDue</td>
            </tr>
        }
    </tbody>
</table>
